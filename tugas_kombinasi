import itertools

def faktorial(x):
    if x == 0 or x == 1:
        return 1
    hasil = 1
    for i in range(2, x + 1):
        hasil *= i
    return hasil

def kombinasi(n, r):
    if r > n:
        return 0
    faktorial_n = faktorial(n)
    faktorial_r = faktorial(r)
    faktorial_n_r = faktorial(n - r)
    return faktorial_n // (faktorial_r * faktorial_n_r)

n = int(input("Masukkan jumlah total objek (n): "))
r = int(input("Masukkan jumlah objek yang dipilih (r): "))

# ini untuk menggunakan inisial huruf sebagai objeknya
huruf = [chr(65 + i) for i in range(n)]

hasil_jumlah = kombinasi(n, r)
print(f"\nJumlah kombinasi C({n}, {r}) adalah: {hasil_jumlah}")

# ini untuk menampilkan semua kombinasi
print("\nDaftar kombinasi yang mungkin:")
for i, combo in enumerate(itertools.combinations(huruf, r), start=1):
    print(f"{i}. {combo}")
